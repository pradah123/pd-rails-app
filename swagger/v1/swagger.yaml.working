---
openapi: 3.0.1
info:
  title: API V1
  version: v1
paths:
  "/api/v1/region":
    post:
      summary: create region
      parameters: []
      responses:
        '200':
          description: successful
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                api_hash:
                  type: string
                name:
                  type: string
                description:
                  type: string
                logo_image_url:
                  type: string
                header_image_url:
                  type: string
                raw_polygon_json:
                  type: string
                lat_input:
                  type: number
                lng_input:
                  type: number
                polygon_side_length:
                  type: number
                contest:
                  type: array
                  items:
                    type: string
                status:
                  type: string
                  enum:
                  - online
                  - offline
                subscription:
                  type: string
                display_flag:
                  type: string
              required:
              - api_hash
              - name
              - description
              - status
  "/api/v1/region/{id}":
    parameters:
    - name: id
      in: path
      description: id
      required: true
      schema:
        type: string
    get:
      summary: show region
      parameters:
        - in: query
          name: bioscore_pctile_contest_id
          description: contest id required as reference to fetch bioscore percentile
          schema:
            type: integer
          required: false
      responses:
        '200':
          description: successful
    delete:
      summary: delete region
      parameters: []
      responses:
        '200':
          description: successful
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                api_hash:
                  type: string
              required:
              - api_hash
    put:
      summary: update region
      parameters: []
      responses:
        '200':
          description: successful
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                api_hash:
                  type: string
                name:
                  type: string
                description:
                  type: string
                logo_image_url:
                  type: string
                header_image_url:
                  type: string
                raw_polygon_json:
                  type: string
                lat_input:
                  type: number
                lng_input:
                  type: number
                polygon_side_length:
                  type: number
                contest:
                  type: array
                  items:
                    type: string
                status:
                  type: string
                  enum:
                  - online
                  - offline
                subscription:
                  type: string
                display_flag:
                  type: string
              required:
              - api_hash
    patch:
      summary: update region
      parameters: []
      responses:
        '200':
          description: successful
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                api_hash:
                  type: string
                name:
                  type: string
                description:
                  type: string
                logo_image_url:
                  type: string
                header_image_url:
                  type: string
                raw_polygon_json:
                  type: string
                population:
                  type: integer
                lat_input:
                  type: number
                lng_input:
                  type: number
                polygon_side_length:
                  type: number
                contest:
                  type: array
                  items:
                    type: string
                status:
                  type: string
                  enum:
                  - online
                  - offline
                subscription:
                  type: string
                display_flag:
                  type: string
              required:
              - api_hash
  "/api/v1/region/polygon/generate":
    get:
      summary: generate polygon
      parameters:
      - in: query
        name: lat
        schema:
          type: number
        description: Latitude for which polygon needs to be generated
        required: true
      - in: query
        name: lng
        schema:
          type: number
        description: Longitude for which polygon needs to be generated
        required: true
      - in: query
        name: polygon_side_length
        schema:
          type: number
        description: Longitude for which polygon needs to be generated
      - in: query
        name: polygon_format
        schema:
          type: string
        description: Longitude for which polygon needs to be generated
      responses:
        '200':
          description: successful
servers:
- url: https://portal-staging.biosmart.life
- url: https://portal.biosmart.life
- url: http://localhost:4000
